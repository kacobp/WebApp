@using WebApp.Presentacion.WebMvc5.Resources

@model WebApp.Presentacion.WebMvc5.ViewModels.Nt_CantCrudViewModel

@{ 
	ViewBag.Title = "Add Nt_Cant"; 
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Nt_Cant</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>    @ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
							@Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.IdAlim, new { @class = "control-label col-md-2" }):
								@Html.DropDownListFor(model => model.Nt_Cant.IdAlim, Model.Alims, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.IdAlim, "", new { @class = "text-danger" })
							</div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.IdNtFte, new { @class = "control-label col-md-2" }):
								@Html.DropDownListFor(model => model.Nt_Cant.IdNtFte, Model.Nt_Fuentes, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.IdNtFte, "", new { @class = "text-danger" })
							</div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.IdNut, new { @class = "control-label col-md-2" }):
								@Html.DropDownListFor(model => model.Nt_Cant.IdNut, Model.Nutrientes, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.IdNut, "", new { @class = "text-danger" })
							</div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.Valor, new { @class = "control-label col-md-2" }):
								@Html.EditorFor(model => model.Nt_Cant.Valor, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.Valor, "", new { @class = "text-danger" })
							</div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.ErrorEstandar, new { @class = "control-label col-md-2" }):
								@Html.EditorFor(model => model.Nt_Cant.ErrorEstandar, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.ErrorEstandar, "", new { @class = "text-danger" })
							</div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.NumObs, new { @class = "control-label col-md-2" }):
								@Html.EditorFor(model => model.Nt_Cant.NumObs, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.NumObs, "", new { @class = "text-danger" })
							</div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nt_Cant.FechaRegistro, new { @class = "control-label col-md-2" }):
								@Html.EditorFor(model => model.Nt_Cant.FechaRegistro, new { @class = "form-control" })
								@Html.ValidationMessageFor(model => model.Nt_Cant.FechaRegistro, "", new { @class = "text-danger" })
							</div>

							<div class="form-group">
                                <button type="button" onclick="submit()" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="@PresentationResources.Add">
                                    <i class="fa fa-save"> @PresentationResources.Add</i>
                                </button>

                                <a href="@Url.Action(PresentationResources.Find, "Nt_Cant")" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="@PresentationResources.GoBack"><i class="fa fa-reply"></i> @PresentationResources.GoBack</a>
							</div>
						</div>
					}
                </div>
            </div>
        </div>
    </div>
</div>

