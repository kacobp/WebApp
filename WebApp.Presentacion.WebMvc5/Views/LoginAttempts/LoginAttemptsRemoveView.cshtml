@using WebApp.Presentacion.WebMvc5.Resources

@model WebApp.Presentacion.WebMvc5.ViewModels.LoginAttemptsCrudViewModel

@{ 
	ViewBag.Title = "Remove LoginAttempts"; 
	}

<h2>@ViewBag.Title</h2>

<h3>@Html.Label(PresentationResources.DeleteSure)</h3>
@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

	<fieldset>
		<legend>LoginAttempts</legend>

			@Html.HiddenFor(model => model.LoginAttempts.Id)

		<div class="newline">
			<div class="label">
				@Html.DisplayNameFor(model => model.LoginAttempts.IdUsuario):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.LoginAttempts.IdUsuario)
			</div>
			<div class="label">
				@Html.DisplayNameFor(model => model.LoginAttempts.Password):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.LoginAttempts.Password)
			</div>
		</div>
		<div class="newline">
			<div class="label">
				@Html.DisplayNameFor(model => model.LoginAttempts.IPNumber):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.LoginAttempts.IPNumber)
			</div>
			<div class="label">
				@Html.DisplayNameFor(model => model.LoginAttempts.BrowserType):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.LoginAttempts.BrowserType)
			</div>
		</div>
		<div class="newline">
			<div class="label">
				@Html.DisplayNameFor(model => model.LoginAttempts.Success):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.LoginAttempts.Success)
			</div>
			<div class="label">
				@Html.DisplayNameFor(model => model.LoginAttempts.CreatedDate):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.LoginAttempts.CreatedDate)
			</div>
		</div>
		<div class="buttons">
			<p>
				<input type="submit" name="remove" value="@PresentationResources.Remove" />
			</p>
		</div>		
	</fieldset>
}

<div>
	@Html.ActionLink(PresentationResources.GoBack, "Find")
</div>
