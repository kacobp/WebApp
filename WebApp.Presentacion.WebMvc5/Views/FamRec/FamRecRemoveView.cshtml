@using WebApp.Presentacion.WebMvc5.Resources

@model WebApp.Presentacion.WebMvc5.ViewModels.FamRecCrudViewModel

@{ 
	ViewBag.Title = "Remove FamRec"; 
	}

<h2>@ViewBag.Title</h2>

<h3>@Html.Label(PresentationResources.DeleteSure)</h3>
@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

	<fieldset>
		<legend>FamRec</legend>

			@Html.HiddenFor(model => model.FamRec.Id)

		<div class="newline">
			<div class="label">
				@Html.DisplayNameFor(model => model.FamRec.Nombre):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.FamRec.Nombre)
			</div>
			<div class="label">
				@Html.DisplayNameFor(model => model.FamRec.Descripcion):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.FamRec.Descripcion)
			</div>
		</div>
		<div class="newline">
			<div class="label">
				@Html.DisplayNameFor(model => model.FamRec.Base):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.FamRec.Base)
			</div>
			<div class="label">
				@Html.DisplayNameFor(model => model.FamRec.FechaRegistro):
			</div>
			<div class="field">
				@Html.DisplayFor(model => model.FamRec.FechaRegistro)
			</div>
		</div>
		<div class="buttons">
			<p>
				<input type="submit" name="remove" value="@PresentationResources.Remove" />
			</p>
		</div>		
	</fieldset>
}

<div>
	@Html.ActionLink(PresentationResources.GoBack, "Find")
</div>
